    .avatar img {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        object-fit: cover;
        background: #fff;
    }

    .cnl {
        border: 1px solid #9d9d9d !important;
        background-color: #d2d2d2;
        color: #000000;
    }
</style>